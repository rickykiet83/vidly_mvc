@model Vidly_MVC.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random Movie";
    Layout = "_Layout";
}
@*
    This is comment
*@

@{
    var className = Model.Customers.Count > 2 ? "popular" : null;
}
<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>    
}
